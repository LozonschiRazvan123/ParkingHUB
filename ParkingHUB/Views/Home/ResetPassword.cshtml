@page "/Home/ResetPassword/{userId}/{token?}"
@model ParkingHUB.ViewModel.ResetPassword


<h1 class="text-center">Reset Password</h1>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h4 class="card-title mb-4">Reset your password</h4>
                    <form asp-controller="Home" id="resetForm" asp-action="ResetPassword" method="post">
                       

                        <div class="form-group">
                            <label for="Password" class="mb-2">New Password</label>
                            <input type="password" class="form-control mb-3" id="Password" name="Password" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="ConfirmPassword" class="mb-2">Confirm Password</label>
                            <input type="password" class="form-control mb-3" id="ConfirmPassword" name="ConfirmPassword" />
                            <span class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block" id="sendResetButton" onclick="sendDataToBackend()">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="userId"></div>
<div id="token"></div>

<script>
    function sendDataToBackend() {
        var url = new URL(window.location.href);

        var userId = url.searchParams.get('userId');
        var token = url.searchParams.get('token');
        var password = document.getElementById('Password').value;
        var passwordConfirmed = document.getElementById('ConfirmPassword').value;

        var formData = new FormData();
        formData.append('userId', userId);
        formData.append('token', token);
        formData.append('Password', password);
        formData.append('ConfirmPassword', passwordConfirmed)

        fetch('/Home/ResetPassword', {
            method: 'POST',
            body: formData
        })
            .then(response => {
                if (response.ok) {
                    console.log('Data sent successfully');
                } else {
                    console.error('Error sending data to backend');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }
</script>
