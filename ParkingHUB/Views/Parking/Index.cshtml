@{
}
@model IEnumerable<ParkingDTO>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">ParkingHUB</h1>
            <p class="lead text-body-secondary">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
            <p>
                @if (User.IsInRole("admin"))
                {
                    <a href="@Url.Action("CreateLocationForParking", "Parking")" class="btn btn-primary my-2">Add parking location</a>
                    <a href="#" class="btn btn-secondary my-2" data-toggle="modal" data-target="#feedbackModal">Send feedback</a>
                }
            </p>
        </div>
    </div>
</section>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var parking in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        @if (@parking.Image != null)
                        {
                            <img class="bd-placeholder-img card-img-top" src="@Url.Action("GetImage", "Parking", new { id = parking.Id })
                            " width="100%" height="224">
                        }
                        else
                        {
                            <img src="~/img/no-photo-available.png" />
                        }
                        <div class="card-body">
                            <p>Location: @parking.Location</p>
                            <p>Total parking: @parking.TotalSlot</p>
                            <p>Free parking: @parking.AvailableSlot</p>
                            <p>Price: @parking.Price RON</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Parking" asp-action="ParkingListVehicle" asp-route-location="@parking.Location" class="btn btn-sm btn-outline-secondary">View</a>
                                    @if(User.IsInRole("admin"))
                                    {
                                    <a asp-controller="Parking" asp-action="EditParking" asp-route-parkingId="@parking.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <button type="button" class="btn btn-sm btn-outline-secondary delete-button" data-toggle="modal" data-target="#confirmDeleteModal_@parking.Id" data-parking-id="@parking.Id">Delete</button>
                                    }
                                </div>
                                <small class="text-body-secondary">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<form method="post" id="deleteForm">
    @foreach (var parking in Model)
    {
        <div class="modal fade" id="confirmDeleteModal_@parking.Id" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete the parking location <strong>@parking.Location</strong>?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger confirm-delete" data-parking-id="@parking.Id">Yes, Delete</button>
                    </div>
                </div>
            </div>
        </div>
    }
</form>
<div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="feedbackModalLabel">Send Feedback</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="feedbackForm" method="post">
                    <div class="form-group">
                        <label for="feedbackMessage">Feedback Message:</label>
                        <textarea class="form-control" id="feedbackMessage" name="feedbackMessage" rows="3"></textarea>
                    </div>
                    <button type="button" class="btn btn-primary" onclick="sendFeedback()">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $('.confirm-delete').on('click', function () {
        var parkingId = $(this).data('parking-id');
        $('#deleteForm').attr('action', '/Parking/DeleteParking/' + parkingId);
        $('#deleteForm').submit(); 
    });


    function sendFeedback() {
        var feedbackMessage = document.getElementById("feedbackMessage").value;

        var data = {
            Body: feedbackMessage
        };

        try {
            fetch('/Email/SendEmail', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
                .then(response => {
                    if (response.ok) {
                        alert("Feedback has been sent successfully!");
                        document.getElementById("feedbackMessage").value = "";
                    } else {
                        alert("An error occurred while submitting feedback!");
                    }
                })
                .catch(error => {
                    console.error('Eroare:', error);
                    alert("An error occurred while submitting feedback!");
                });
        } catch (error) {
            console.error('Eroare:', error);
            alert("An error occurred while submitting feedback!");
        }
    }
</script>
